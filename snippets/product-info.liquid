{% comment %}
  Template: Product
  
  This template renders the product page for real estate properties.
  It uses a responsive layout with two columns on desktop and one column on mobile.
  
  Requirements: 5.1, 5.2
{% endcomment %}

{% layout 'theme' %}

<div class="product-page">
  <div class="product-container">
    {% comment %} Main product section that contains all components {% endcomment %}
    {% section 'product-main' %}
  </div>
</div>

{% comment %} Product page specific styles {% endcomment %}
<style>
  .product-page {
    padding: 2rem 0;
    background-color: var(--primary-white);
  }

  .product-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  {% comment %} Mobile First Responsive Design {% endcomment %}
  
  {% comment %} Mobile (â‰¤480px) - Single column layout {% endcomment %}
  @media (max-width: 480px) {
    .product-container {
      padding: 0 0.5rem;
    }
    
    .product-page {
      padding: 1rem 0;
    }
  }

  {% comment %} Tablet (481-768px) - Adjusted two column layout {% endcomment %}
  @media (min-width: 481px) and (max-width: 768px) {
    .product-container {
      padding: 0 1.5rem;
    }
  }

  {% comment %} Desktop (>768px) - Two column layout {% endcomment %}
  @media (min-width: 769px) {
    .product-container {
      padding: 0 2rem;
    }
    
    .product-page {
      padding: 3rem 0;
    }
  }

  {% comment %} Large Desktop (>1200px) {% endcomment %}
  @media (min-width: 1200px) {
    .product-container {
      max-width: 1400px;
    }
  }
</style>