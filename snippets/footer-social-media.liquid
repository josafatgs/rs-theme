{% comment %}
  Footer Social Media Component
  
  Displays social media links with SVG icons
  Handles empty URLs gracefully by hiding individual items
  
  Parameters:
  - section: The footer section object containing settings
{% endcomment %}

{% assign has_social = false %}
{% if section.settings.facebook_url != blank or section.settings.instagram_url != blank or section.settings.twitter_url != blank or section.settings.linkedin_url != blank or section.settings.youtube_url != blank or section.settings.whatsapp_url != blank %}
  {% assign has_social = true %}
{% endif %}

{% if has_social %}
  <div class="footer-social">
    <h4 class="footer-social-title" id="social-heading">
      {{ section.settings.social_title | default: 'Síguenos' }}
    </h4>
    
    <div class="footer-social-links" role="group" aria-labelledby="social-heading">
      {% if section.settings.facebook_url != blank %}
        <a href="{{ section.settings.facebook_url }}" 
           class="footer-social-link footer-social-link--facebook"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Síguenos en Facebook">
          {% render 'svg', icon: 'facebook', class: 'svg-icon--medium' %}
          <span class="sr-only">Facebook</span>
        </a>
      {% endif %}

      {% if section.settings.instagram_url != blank %}
        <a href="{{ section.settings.instagram_url }}" 
           class="footer-social-link footer-social-link--instagram"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Síguenos en Instagram">
          {% render 'svg', icon: 'instagram', class: 'svg-icon--medium' %}
          <span class="sr-only">Instagram</span>
        </a>
      {% endif %}

      {% if section.settings.twitter_url != blank %}
        <a href="{{ section.settings.twitter_url }}" 
           class="footer-social-link footer-social-link--twitter"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Síguenos en Twitter/X">
          {% render 'svg', icon: 'twitter', class: 'svg-icon--medium' %}
          <span class="sr-only">Twitter/X</span>
        </a>
      {% endif %}

      {% if section.settings.linkedin_url != blank %}
        <a href="{{ section.settings.linkedin_url }}" 
           class="footer-social-link footer-social-link--linkedin"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Síguenos en LinkedIn">
          {% render 'svg', icon: 'linkedin', class: 'svg-icon--medium' %}
          <span class="sr-only">LinkedIn</span>
        </a>
      {% endif %}

      {% if section.settings.youtube_url != blank %}
        <a href="{{ section.settings.youtube_url }}" 
           class="footer-social-link footer-social-link--youtube"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Síguenos en YouTube">
          {% render 'svg', icon: 'youtube', class: 'svg-icon--medium' %}
          <span class="sr-only">YouTube</span>
        </a>
      {% endif %}

      {% if section.settings.whatsapp_url != blank %}
        <a href="{{ section.settings.whatsapp_url }}" 
           class="footer-social-link footer-social-link--whatsapp"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Contáctanos por WhatsApp">
          {% render 'svg', icon: 'whatsapp', class: 'svg-icon--medium' %}
          <span class="sr-only">WhatsApp</span>
        </a>
      {% endif %}
    </div>
  </div>
{% endif %}

{% stylesheet %}
  .footer-social {
    margin-bottom: 2rem;
  }

  .footer-social-title {
    color: var(--primary-gold, #cd9d08);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    line-height: 1.4;
  }

  .footer-social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: var(--primary-white, #ffffff);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-social-link:hover {
    background-color: var(--primary-gold, #cd9d08);
    border-color: var(--primary-gold, #cd9d08);
    color: var(--dark-blue, #0d1b2a);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(205, 157, 8, 0.3);
  }

  .footer-social-link:focus {
    outline: 2px solid var(--primary-gold, #cd9d08);
    outline-offset: 2px;
  }

  .footer-social-link:active {
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(205, 157, 8, 0.3);
  }

  /* Individual social media brand colors on hover */
  .footer-social-link--facebook:hover {
    background-color: #1877f2;
    border-color: #1877f2;
    color: #ffffff;
  }

  .footer-social-link--instagram:hover {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    border-color: #e6683c;
    color: #ffffff;
  }

  .footer-social-link--twitter:hover {
    background-color: #1da1f2;
    border-color: #1da1f2;
    color: #ffffff;
  }

  .footer-social-link--linkedin:hover {
    background-color: #0077b5;
    border-color: #0077b5;
    color: #ffffff;
  }

  .footer-social-link--youtube:hover {
    background-color: #ff0000;
    border-color: #ff0000;
    color: #ffffff;
  }

  .footer-social-link--whatsapp:hover {
    background-color: #25d366;
    border-color: #25d366;
    color: #ffffff;
  }

  /* Screen reader only text */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer-social {
      text-align: center;
      margin-bottom: 2.5rem;
    }
    
    .footer-social-title {
      font-size: 1.25rem;
    }
    
    .footer-social-links {
      justify-content: center;
      gap: 1.5rem;
    }
    
    .footer-social-link {
      width: 48px;
      height: 48px;
    }
  }

  /* Touch device optimization */
  @media (hover: none) {
    .footer-social-link:hover {
      transform: none;
      box-shadow: none;
    }
    
    .footer-social-link:active {
      background-color: var(--primary-gold, #cd9d08);
      border-color: var(--primary-gold, #cd9d08);
      color: var(--dark-blue, #0d1b2a);
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .footer-social-link {
      border-width: 3px;
      background-color: rgba(255, 255, 255, 0.2);
    }
    
    .footer-social-link:focus {
      outline-width: 3px;
      outline-offset: 3px;
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .footer-social-link {
      transition: color 0.1s ease, background-color 0.1s ease;
    }
    
    .footer-social-link:hover,
    .footer-social-link:active {
      transform: none;
      box-shadow: none;
    }
  }
{% endstylesheet %}