{% comment %}
  Footer Contact Information Component
  
  Displays contact information with appropriate icons and functional links
  Handles empty fields gracefully by hiding individual items
  
  Parameters:
  - section: The footer section object containing settings
{% endcomment %}

{% assign has_contact_info = false %}
{% if section.settings.address != blank or section.settings.phone != blank or section.settings.phone_secondary != blank or section.settings.email != blank or section.settings.email_secondary != blank or section.settings.hours != blank %}
  {% assign has_contact_info = true %}
{% endif %}

{% if has_contact_info %}
  <div class="footer-contact">
    <h4 class="footer-contact-title" id="contact-heading">
      {{ section.settings.contact_title | default: 'Contacto' }}
    </h4>
    
    <address class="footer-contact-list" role="group" aria-labelledby="contact-heading">
      {% if section.settings.address != blank %}
        <div class="footer-contact-item">
          <span class="footer-contact-icon" aria-hidden="true">
            {% render 'svg', icon: 'location', class: 'svg-icon--medium' %}
          </span>
          <span class="footer-contact-text">
            <span class="sr-only">Dirección: </span>
            {{ section.settings.address }}
          </span>
        </div>
      {% endif %}
      
      {% if section.settings.phone != blank %}
        <div class="footer-contact-item">
          <span class="footer-contact-icon" aria-hidden="true">
            {% render 'svg', icon: 'phone', class: 'svg-icon--medium' %}
          </span>
          <a href="tel:{{ section.settings.phone | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' }}" 
             class="footer-contact-link"
             aria-label="Llamar al teléfono {{ section.settings.phone }}"
             title="Llamar al {{ section.settings.phone }}">
            <span aria-hidden="true">{{ section.settings.phone }}</span>
            <span class="sr-only">Teléfono: {{ section.settings.phone }}</span>
          </a>
        </div>
      {% endif %}

      {% if section.settings.phone_secondary != blank %}
        <div class="footer-contact-item">
          <span class="footer-contact-icon" aria-hidden="true">
            {% render 'svg', icon: 'phone', class: 'svg-icon--medium' %}
          </span>
          <a href="tel:{{ section.settings.phone_secondary | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' }}" 
             class="footer-contact-link"
             aria-label="Llamar al teléfono {{ section.settings.phone_secondary }}"
             title="Llamar al {{ section.settings.phone_secondary }}">
            <span aria-hidden="true">{{ section.settings.phone_secondary }}</span>
            <span class="sr-only">Teléfono: {{ section.settings.phone_secondary }}</span>
          </a>
        </div>
      {% endif %}
      
      {% if section.settings.email != blank %}
        <div class="footer-contact-item">
          <span class="footer-contact-icon" aria-hidden="true">
            {% render 'svg', icon: 'email', class: 'svg-icon--medium' %}
          </span>
          <a href="mailto:{{ section.settings.email }}" 
             class="footer-contact-link"
             aria-label="Enviar correo electrónico a {{ section.settings.email }}"
             title="Enviar email a {{ section.settings.email }}">
            <span aria-hidden="true">{{ section.settings.email }}</span>
            <span class="sr-only">Correo electrónico: {{ section.settings.email }}</span>
          </a>
        </div>
      {% endif %}

      {% if section.settings.email_secondary != blank %}
        <div class="footer-contact-item">
          <span class="footer-contact-icon" aria-hidden="true">
            {% render 'svg', icon: 'email', class: 'svg-icon--medium' %}
          </span>
          <a href="mailto:{{ section.settings.email_secondary }}" 
             class="footer-contact-link"
             aria-label="Enviar correo electrónico a {{ section.settings.email_secondary }}"
             title="Enviar email a {{ section.settings.email_secondary }}">
            <span aria-hidden="true">{{ section.settings.email_secondary }}</span>
            <span class="sr-only">Correo electrónico: {{ section.settings.email_secondary }}</span>
          </a>
        </div>
      {% endif %}
      
      {% if section.settings.hours != blank %}
        <div class="footer-contact-item">
          <span class="footer-contact-icon" aria-hidden="true">
            {% render 'svg', icon: 'clock', class: 'svg-icon--medium' %}
          </span>
          <span class="footer-contact-text">
            <span class="sr-only">Horarios de atención: </span>
            {{ section.settings.hours }}
          </span>
        </div>
      {% endif %}
    </address>
  </div>
{% endif %}

{% stylesheet %}
  .footer-contact {
    margin-bottom: 2rem;
  }

  .footer-contact-title {
    color: var(--primary-gold, #cd9d08);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    line-height: 1.4;
  }

  .footer-contact-list {
    font-style: normal;
    margin: 0;
  }

  .footer-contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .footer-contact-item:last-child {
    margin-bottom: 0;
  }

  .footer-contact-icon {
    color: var(--primary-gold, #cd9d08);
    font-size: 1rem;
    margin-top: 0.125rem;
    flex-shrink: 0;
    width: 1.2rem;
    text-align: center;
  }

  .footer-contact-text {
    color: var(--primary-white, #ffffff);
    font-size: 0.875rem;
    line-height: 1.5;
    opacity: 0.9;
  }

  .footer-contact-link {
    color: var(--primary-white, #ffffff);
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.5;
    transition: color 0.3s ease;
    opacity: 0.9;
  }

  .footer-contact-link:hover,
  .footer-contact-link:focus {
    color: var(--primary-gold, #cd9d08);
    opacity: 1;
    outline: 2px solid var(--primary-gold, #cd9d08);
    outline-offset: 2px;
  }

  /* Touch device optimization */
  @media (hover: none) {
    .footer-contact-link {
      min-height: 44px;
      display: flex;
      align-items: center;
      padding: 0.25rem 0;
    }
    
    .footer-contact-item {
      align-items: center;
    }
  }

  /* Screen reader only text */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer-contact {
      text-align: center;
      margin-bottom: 2.5rem;
    }
    
    .footer-contact-title {
      font-size: 1.25rem;
    }
    
    .footer-contact-item {
      justify-content: center;
      text-align: left;
      max-width: 280px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .footer-contact-text,
    .footer-contact-link {
      font-size: 0.9rem;
    }
  }
{% endstylesheet %}